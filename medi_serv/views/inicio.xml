<!-- views/bienvenida_view.xml -->
<odoo>

    <record id="model_medi_serv_bienvenida" model="ir.model">
        <field name="name">medi_serv.bienvenida</field>
        <field name="model">medi_serv.bienvenida</field>
        <field name="state">manual</field>
          <list> 
            <field name="name" string="Nombre" required="1"/> 
            <field name="description" string="Descripción" required="1"/>
        </list>
    </record>
    <record id="view_bienvenida_form" model="ir.ui.view">
        <field name="name">medi_serv.bienvenida.form</field>
        <field name="model">medi_serv.bienvenida</field>
        <field name="arch" type="xml">
            <form string="Bienvenida">
                <sheet>
                    <h1>Bienvenidos a MediServicios</h1>
                    <p>Este es el sistema de gestión médica.</p>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_bienvenida" model="ir.actions.act_window">
        <field name="name">Inicio</field>
        <field name="res_model">medi_serv.bienvenida</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_bienvenida_form"/>
        <field name="target">current</field>
    </record>

</odoo>
