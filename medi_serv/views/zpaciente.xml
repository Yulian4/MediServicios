<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="lista_pacientes" name="Lista de Pacientes">
        <t t-call="website.layout">
            <div class="oe_structure">
                <h1>Lista de Pacientes</h1>
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Nombre</th>
                            <th>Apellidos</th>
                            <th>Edad</th>
                            <th>Email</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-foreach="pacientes" t-as="paciente">
                            <tr>
                                <td>
                                    <t t-esc="paciente.name"/>
                                </td>
                                <td>
                                    <t t-esc="paciente.apellidos"/>
                                </td>
                                <td>
                                    <t t-esc="paciente.edad"/>
                                </td>
                                <td>
                                    <t t-esc="paciente.email"/>
                                </td>
                                <td>
                                    <a t-att-href="'/paciente/editar/' + str(paciente.id)">Editar</a>
                                </td>
                            </tr>
                        </t>
                    </tbody>
                </table>
                <a href="/paciente/crear" class="btn btn-primary">Agregar Paciente</a>
            </div>
        </t>
    </template>
</odoo>
