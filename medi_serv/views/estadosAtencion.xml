<odoo>
    <record id="view_estado_form" model="ir.ui.view">
        <field name="name">estado.form</field>
        <field name="model">medi_serv.estado</field>
        <field name="arch" type="xml">
            <form string="estado">
                <sheet>
                    <group>
                        <field name="paciente"/>
                        <field name="presion"/>
                        <field name="temperatura"/>
                        <field name="frecuencia_cardiaca"/>
                        <field name="tipo_atencion" readonly="1"/>
                        <field name="estado"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_estado_kanban" model="ir.ui.view">
        <field name="name">estado.kanban</field>
        <field name="model">medi_serv.estado</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_estado">
                <field name="paciente"/>
                <field name="tipo_atencion"/>
                <field name="estado"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card" style="border:1px solid #ccc; border-radius:10px; padding:10px;">
                            <strong><field name="paciente"/></strong><br/>
                            <span>Atenci√≥n: <field name="tipo_atencion"/></span><br/>
                            <span>Triage: <field name="estado"/></span>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="action_estado" model="ir.actions.act_window">
        <field name="name">estado</field>
        <field name="res_model">medi_serv.estado</field>
        <field name="view_mode">kanban,form</field>
    </record>

    <!-- <menuitem id="menu_estado" name="estado" parent="menu_root" action="action_estado"/> -->
</odoo>
