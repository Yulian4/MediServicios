<odoo>
    <template id="vista_medicamento_web" name="Vista HTML Medicamentos">
        <t t-call="website.layout">

            <!-- Línea para cargar los assets CSS personalizados -->
            <t t-call-assets="web.assets_frontend" t-js="false"/>

            <div class="container mt-5 mb-5">
                <div class="contenedor-factura">
                    <h2 class="text-center text-primary">Medicamentos</h2>
                    <hr/>

                    <t t-foreach="medicamentos" t-as="med">
                        <div class="texto-1 mb-4">
                            <p><strong>Código:</strong> <t t-esc="med.codigo"/></p>
                            <p><strong>Nombre:</strong> <t t-esc="med.nombre"/></p>
                            <p><strong>Principio Activo:</strong> <t t-esc="med.principio_activo"/></p>
                            <p><strong>Forma Farmacéutica:</strong> <t t-esc="med.forma_farmaceutica"/></p>
                            <p><strong>Concentración:</strong> <t t-esc="med.concentracion"/></p>
                            <p><strong>Vía de Administración:</strong> <t t-esc="med.via_administracion"/></p>
                            <p><strong>Dosis Recomendada:</strong> <t t-esc="med.dosis_recomendada"/></p>
                            <p><strong>Precio:</strong> $<t t-esc="med.precio"/></p>
                            <hr/>
                        </div>
                    </t>

                    <div class="text-center mt-3">
                        <a href="/" class="btn btn-secondary">Volver al inicio</a>
                    </div>
                </div>
            </div>
        </t>
    </template>
</odoo>

