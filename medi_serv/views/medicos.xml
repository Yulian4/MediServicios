<odoo>
    <data>
        <record id="view_medico_form" model="ir.ui.view">
            <field name="name">view_medico_form</field>
            <field name="model">medi_serv.medico</field>
            <field name="arch" type="xml">
                <form string="Medico">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="apellidos"/>
                                <field name="especialidad"/>
                            </group>
                            <group>
                                <field name="telefono"/>
                                <field name="email"/>
                                <field name="fecha_nacimiento"/>
                            </group>
                        </group>
                        <group>
                            <field name="sexo"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_medico_list" model="ir.ui.view">
            <field name="name">medico.list</field>
            <field name="model">medi_serv.medico</field>
            <field name="arch" type="xml">
                <list string="Medicos">
                    <field name="name"/>
                    <field name="especialidad"/>
                    <field name="telefono"/>
                    <field name="email"/>
                </list>
            </field>
        </record>

        <record id="action_medico" model="ir.actions.act_window">
            <field name="name">Medicos</field>
            <field name="res_model">medi_serv.medico</field>
            <field name="view_mode">list,form</field>
        </record>

        <menuitem id="menu_medicos" parent="menu_root" action="action_medico" sequence="10"/>
    </data>
</odoo>