<odoo>
  <record id="view_form_insumo" model="ir.ui.view">
      <field name="name">medi_serv.insumo.form</field>
      <field name="model">medi_serv.insumo</field>
      <field name="arch" type="xml">
          <form string="Insumo Médico">
              <sheet>
                  <group>
                      <field name="nombre"/>
                      <field name="tipo"/>
                      <field name="descripcion"/>
                      <field name="unidad_medida"/>
                      <field name="stock"/>
                      <field name="precio_unitario"/>
                      <field name="fecha_vencimiento"/>
                  </group>
              </sheet>
          </form>
      </field>
  </record>

  <record id="view_list_insumo" model="ir.ui.view">
      <field name="name">medi_serv.insumo.list</field>
      <field name="model">medi_serv.insumo</field>
      <field name="arch" type="xml">
          <list string="Insumos Médicos">
              <field name="nombre"/>
              <field name="tipo"/>
              <field name="unidad_medida"/>
              <field name="stock"/>
          </list>
      </field>
  </record>

  <record id="action_insumo" model="ir.actions.act_window">
      <field name="name">Insumos</field>
      <field name="res_model">medi_serv.insumo</field>
      <field name="view_mode">list,form</field>
  </record>

  
  <menuitem id="menu_insumo" name="Gestionar Insumos" parent="menu_root" action="action_insumo"/>
</odoo>
