<odoo>
    <record id="view_tratamiento_proc_tree" model="ir.ui.view">
        <field name="name">medi_serv.trata_proc_cirugia.tree</field>
        <field name="model">medi_serv.trata_proc_cirugia</field>
        <field name="arch" type="xml">
            <list string="Tratamientos y Procedimientos Quirúrgicos">
                <field name="codigo"/>
                <field name="name"/>
                <field name="descripcion"/>
                <field name="costo"/>
            </list>
        </field>
    </record>

    <record id="view_tratamiento_proc_form" model="ir.ui.view">
        <field name="name">medi_serv.trata_proc_cirugia.form</field>
        <field name="model">medi_serv.trata_proc_cirugia</field>
        <field name="arch" type="xml">
            <form string="Tratamiento/Procedimiento Quirúrgico">
                <sheet>
                    <group>
                        <field name="codigo"/>
                        <field name="name"/>
                        <field name="descripcion"/>
                        <field name="costo"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Acción que define lo que se muestra en el menú -->
    <record id="action_tratamiento_proc" model="ir.actions.act_window">
        <field name="name">Tratamientos y Procedimientos Quirúrgicos</field>
        <field name="res_model">medi_serv.trata_proc_cirugia</field>
        <field name="view_mode">list,form</field>
        <field name="context">{}</field>
    </record>

    <!-- Item de menú -->
    <menuitem id="menu_tratamiento_proc" name="Tratamientos y Procedimientos Quirúrgicos"
              parent="menu_root" action="action_tratamiento_proc"/>
</odoo>