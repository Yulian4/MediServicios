<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="facturaCreate" name="Crear Factura">
        <t t-call="website.layout">
            <div class="container mt-4">
                <h2 class="mb-3 text-primary">Crear Nueva Factura</h2>
                <form t-attf-action="/factura/crear" method="POST" class="row mx-auto">
                    <div class="form-group col-md-6">
                        <label>Paciente</label>
                        <select name="paciente_id" class="form-control" required="1">
                            <t t-foreach="pacientes" t-as="paciente">
                                <option t-att-value="paciente.id" t-esc="paciente.name"/>
                            </t>
                        </select>
                    </div>
                    <div class="form-group col-md-6">
                        <label>Fecha de Factura</label>
                        <input type="date" name="fecha_factura" class="form-control"
                               t-att-value="factura_data['fecha_factura']"/>
                    </div>
                    <div class="form-group col-md-12 mt-3">
                        <button class="btn btn-success" type="submit">Guardar</button>
                        <a t-attf-href="/facturas" class="btn btn-primary">Regresar</a>
                    </div>
                </form>
            </div>
        </t>
    </template>
</odoo>
