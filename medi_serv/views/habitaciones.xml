<!-- Archivo: views/habitacion_views.xml -->
<odoo>
    <!-- Vista FORMULARIO -->
    <record id="view_habitacion_form" model="ir.ui.view">
        <field name="name">medi_serv.habitacion.form</field>
        <field name="model">medi_serv.habitacion</field>
        <field name="arch" type="xml">
            <form string="Habitación">
                <sheet>
                    <group>
                        <field name="nombre"/>
                        <field name="codigo"/>
                        <field name="disponible"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Vista KANBAN (personalizada para evitar error raw_value) -->
    <record id="view_habitacion_kanban" model="ir.ui.view">
        <field name="name">medi_serv.habitacion.kanban</field>
        <field name="model">medi_serv.habitacion</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_small_column" quick_create="false" default_order="nombre">
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_card #{record.disponible.raw_value ? 'bg-success' : 'bg-danger'} o_kanban_global_click">
                            <strong><t t-esc="record.nombre.value"/></strong><br/>
                            Código: <t t-esc="record.codigo.value"/><br/>
                            Estado:
                            <span t-if="record.disponible.raw_value" class="text-success">Disponible</span>
                            <span t-if="!record.disponible.raw_value" class="text-danger">Ocupado</span>
                        </div>
                    </t>
                </templates>
                <field name="nombre"/>
                <field name="codigo"/>
                <field name="disponible"/>
            </kanban>
        </field>
    </record>

    <!-- Acción -->
    <record id="action_medi_serv_habitacion" model="ir.actions.act_window">
        <field name="name">Habitaciones</field>
        <field name="res_model">medi_serv.habitacion</field>
        <field name="view_mode">kanban,form</field>
    </record>

