<odoo>
    <template id="report_factura_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <div class="page">
                    <h2 style="text-align: center;">Factura</h2>
                    <p><strong>NÃºmero de Factura:</strong> <t t-esc="doc.name"/></p>
                    <p><strong>Paciente:</strong> <t t-esc="doc.paciente_id.name"/></p>
                    <p><strong>Fecha:</strong> <t t-esc="doc.fecha_factura"/></p>
                    <p><strong>Estado:</strong> <t t-esc="doc.estado"/></p>
                    <hr/>
                    <h3>Total Medicamentos</h3>
                    <p><strong>Total:</strong> $<t t-esc="doc.total_medicamentos"/></p>
                </div>
            </t>
        </t>
    </template>

    <report
        id="report_factura"
        model="medi_serv.factura"
        string="Factura"
        report_type="qweb-pdf"
        name="medi_serv.report_factura_template"
        file="medi_serv.report_factura_template"
        print_report_name="'Factura - %s' % (object.name)"
    />
</odoo>