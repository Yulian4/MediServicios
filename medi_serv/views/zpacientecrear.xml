<odoo>
    <template id="crear_paciente" name="Crear Paciente">
        <t t-call="website.layout">
            <div class="oe_structure">
                <h1>Crear Paciente</h1>
                <form action="/paciente/crear" method="POST">
                    <label>Nombre:</label>
                    <input type="text" name="name" required="required"/>
                    <br/>

                    <label>Apellidos:</label>
                    <input type="text" name="apellidos" required="required"/>
                    <br/>

                    <label>Fecha de Nacimiento:</label>
                    <input type="date" name="fecha_nacimiento"/>
                    <br/>

                    <label>Tipo de Documento:</label>
                    <select name="tipodoic">
                        <option value="ti">TI</option>
                        <option value="cc">CC</option>
                    </select>
                    <br/>

                    <label>Teléfono:</label>
                    <input type="text" name="telefono"/>
                    <br/>

                    <label>Email:</label>
                    <input type="email" name="email"/>
                    <br/>

                    <label>Dirección:</label>
                    <input type="text" name="direccion"/>
                    <br/>

                    <label>Sexo:</label>
                    <select name="sexo">
                        <option value="masculino">Masculino</option>
                        <option value="femenino">Femenino</option>
                        <option value="otro">Otro</option>
                    </select>
                    <br/>

                    <label>Acompañante:</label>
                    <select name="acompanante">
                        <option value="si">Sí</option>
                        <option value="no">No</option>
                    </select>
                    <br/>

                    <label>Nombre del Acompañante:</label>
                    <input type="text" name="nombre_acompanante"/>
                    <br/>

                    <label>Teléfono del Acompañante:</label>
                    <input type="text" name="telefono_acompanante"/>
                    <br/>

                    <label>Parentesco del Acompañante:</label>
                    <input type="text" name="parentezco_acompanante"/>
                    <br/>

                    <button type="submit">Guardar</button>
                </form>
            </div>
        </t>
    </template>
</odoo>
