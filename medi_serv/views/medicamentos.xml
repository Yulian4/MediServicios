<odoo>
  <record id="view_form_medicamento" model="ir.ui.view">
      <field name="name">medi_serv.medicamento.form</field>
      <field name="model">medi_serv.medicamento</field>
      <field name="arch" type="xml">
          <form string="Medicamento">
              <sheet>
                  <group>
                      <field name="codigo"/>
                      <field name="nombre"/>
                      <field name="principio_activo"/>
                      <field name="forma_farmaceutica"/>
                      <field name="concentracion"/>
                      <field name="via_administracion"/>
                      <field name="dosis_recomendada"/>
                      <field name="precio"/>
                  </group>
              </sheet>
          </form>
      </field>
  </record>

  <record id="view_list_medicamento" model="ir.ui.view">
      <field name="name">medi_serv.medicamento.list</field>
      <field name="model">medi_serv.medicamento</field>
      <field name="arch" type="xml">
          <list string="Medicamentos">
              <field name="nombre"/>
              <field name="principio_activo"/>
              <field name="forma_farmaceutica"/>
              <field name="concentracion"/>
              <field name="via_administracion"/>
          </list>
      </field>
  </record>

  <record id="action_medicamento" model="ir.actions.act_window">
      <field name="name">Medicamentos</field>
      <field name="res_model">medi_serv.medicamento</field>
      <field name="view_mode">list,form</field>
  </record>

  
  <!-- <menuitem id="menu_medicamento" name="Gestionar Medicamentos" parent="menu_root" action="action_medicamento"/> -->
</odoo>
