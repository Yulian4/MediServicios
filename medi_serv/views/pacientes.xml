<odoo>
    <data>
        <record id="view_paciente_form" model="ir.ui.view">
            <field name="name">view_paciente_form</field>
            <field name="model">medi_serv.paciente</field>
            <field name="arch" type="xml">
                <form string="Paciente">
                    <sheet>
                       <group>
                            <group>
                                <field name="name"/>
                                <field name="apellidos"/>
                                <field name="tipodoic"/> 
                            </group>
                            <group>
                                <field name="telefono"/>
                                <field name="email"/>
                                <field name="fecha_nacimiento"/>
                            </group>
                        </group>
                        <group>
                            <field name="sexo"/>
                            <field name="acompanante"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_medico_list" model="ir.ui.view">
            <field name="name">medico.list</field>
            <field name="model">medi_serv.medico</field>
            <field name="arch" type="xml">
                <list string="Medicos">
                    <field name="name"/>
                    <field name="especialidad"/>
                    <field name="telefono"/>
                    <field name="email"/>
                </list>
            </field>
        </record>

        <record id="action_paciente" model="ir.actions.act_window">
            <field name="name">Pacientes</field>
            <field name="res_model">medi_serv.medico</field>
            <field name="view_mode">list,form</field>
        </record>

        <menuitem id="menu_pacientes" parent="menu_root" action="action_paciente" sequence="10"/>
    </data>
</odoo>