<odoo>
  <template id="preparacionq_list" name="Lista de Preparaciones Quirúrgicas">
    <t t-call="website.layout">
      <div class="container mt32">
        <h2>Lista de Preparaciones Quirúrgicas</h2>
        <table class="table table-striped">
          <thead>
            <tr>
              <th>Paciente</th>
              <th>Descripción</th>
              <th>Fecha de Preparación</th>
              <th>Estado</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <t t-foreach="preparaciones" t-as="preparacion">
              <tr>
                <td><t t-esc="preparacion.paciente_id.name"/></td>
                <td><t t-esc="preparacion.descripcion"/></td>
                <td><t t-esc="preparacion.fecha_preparacion"/></td>
                <td><t t-esc="preparacion.estado"/></td>
                <td>
                <a href="/medi_serv/preparacionq/view/&lt;t t-esc='preparacion.id'/&gt;">Ver</a>
                </td>
              </tr>
            </t>
          </tbody>
        </table>
        <a href="/medi_serv/preparacionq/create" class="btn btn-primary">Crear Nueva Preparación</a>
      </div>
    </t>
  </template>
</odoo>
