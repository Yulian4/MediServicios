<odoo>
    <template id="editar_paciente" name="Editar Paciente">
        <t t-call="website.layout">
            <div class="oe_structure">
                <h1>Editar Paciente</h1>
                <form t-att-action="'/paciente/editar/' + str(paciente.id)" method="POST">
                    <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>

                    <label>Nombre:</label>
                    <input type="text" name="name" t-att-value="paciente.name" required="required"/><br/>

<label>Apellidos:</label>
<input type="text" name="apellidos" t-att-value="paciente.apellidos" required="required"/><br/>

<label>Fecha de Nacimiento:</label>
<input type="date" name="fecha_nacimiento" t-att-value="paciente.fecha_nacimiento"/>
                    <br/>

                    <label>Tipo de Documento:</label>
                    <select name="tipodoic">
                        <option value="ti" t-att-selected="paciente.tipodoic == 'ti'">TI</option>
                        <option value="cc" t-att-selected="paciente.tipodoic == 'cc'">CC</option>
                    </select>
                    <br/>

                    <label>Teléfono:</label>
                    <input type="text" name="telefono" t-att-value="paciente.telefono"/>
                    <br/>

                    <label>Email:</label>
                    <input type="email" name="email" t-att-value="paciente.email"/>
                    <br/>

                    <label>Dirección:</label>
                    <input type="text" name="direccion" t-att-value="paciente.direccion"/>
                    <br/>

                    <label>Sexo:</label>
                    <select name="sexo">
                        <option value="masculino" t-att-selected="paciente.sexo == 'masculino'">Masculino</option>
                        <option value="femenino" t-att-selected="paciente.sexo == 'femenino'">Femenino</option>
                        <option value="otro" t-att-selected="paciente.sexo == 'otro'">Otro</option>
                    </select>
                    <br/>

                    <label>Acompañante:</label>
                    <select name="acompanante">
                        <option value="si" t-att-selected="paciente.acompanante == 'si'">Sí</option>
                        <option value="no" t-att-selected="paciente.acompanante == 'no'">No</option>
                    </select>
                    <br/>

                    <label>Nombre del Acompañante:</label>
                    <input type="text" name="nombre_acompanante" t-att-value="paciente.nombre_acompanante"/>
                    <br/>

                    <label>Teléfono del Acompañante:</label>
                    <input type="text" name="telefono_acompanante" t-att-value="paciente.telefono_acompanante"/>
                    <br/>

                    <label>Parentesco del Acompañante:</label>
                    <input type="text" name="parentezco_acompanante" t-att-value="paciente.parentezco_acompanante"/>
                    <br/>

                    <button type="submit">Actualizar</button>
                </form>
            </div>
        </t>
    </template>

</odoo>