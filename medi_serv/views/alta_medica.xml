<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Vista Formulario -->
    <record id="view_form_alta_medica" model="ir.ui.view">
        <field name="name">medi_serv.alta_medica.form</field>
        <field name="model">medi_serv.alta_medica</field>
        <field name="arch" type="xml">
            <form string="Alta Médica">
                <sheet>
                    <group>
                        <field name="paciente_id"/>
                        <field name="fecha_alta"/>
                        <field name="motivo_alta"/>
                        <field name="recomendaciones"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Vista Lista -->
    <record id="view_list_alta_medica" model="ir.ui.view">
        <field name="name">medi_serv.alta_medica.list</field>
        <field name="model">medi_serv.alta_medica</field>
        <field name="arch" type="xml">
            <list string="Altas Médicas">
                <field name="paciente_id"/>
                <field name="fecha_alta"/>
                <field name="motivo_alta"/>
            </list>
        </field>
    </record>

    <!-- Acción -->
    <record id="action_alta_medica" model="ir.actions.act_window">
        <field name="name">Altas Médicas</field>
        <field name="res_model">medi_serv.alta_medica</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Menú
    <menuitem id="menu_medi_serv_root" name="Gestión Médica" sequence="10"/>
    <menuitem id="menu_medi_serv_alta" name="Altas Médicas" parent="menu_root" action="action_alta_medica" sequence="20"/> -->

</odoo>
